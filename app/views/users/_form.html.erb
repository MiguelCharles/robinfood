<div class="container top">
<div class="row">

<div class="container padded-top">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(current_user) do |s| %>
      <div class="form-inputs">
        <%= s.input :username %>
        <%= s.input :email %>
        <%= s.input :password %>
        <strong><%= t('promo-edit.picture') %></strong>
        <%= s.file_field :facebook_picture_url %>
        <%= s.hidden_field :facebook_picture_url_cache, as: :hidden %>
        </div>
        <%= s.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
