
    <h1>Good deals nearby and for today</h1>

    <div id="map" style="width: 100%; height: 600px;">

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
</div>

  <div class="row">
    <% @promotions.each do |promo| %>
      <div class ="col-md-4">
        <div class="card text-center">
            <h2> <%= link_to promo.title, promotion_path(promo)%></h2>
            <i>proposed by</i>
            <h3><%= promo.shop.name_of_the_store %> </h3>
            <p><strong> <%= promo.shop.category %> </strong></p>
            <p><strong>- Your price : <%= promo.price_after_promotion_per_unit%> € instead of <%=promo.initial_price_per_unit %> € </strong></p>
        </div>

        <strong><%= promo.price_after_promotion_per_unit %> c</strong>


        <p><strong> <%= promo.product_type %> </strong></p>

        <p><%= promo.initial_quantity %></p>

        <p><%= promo.remaining_quantity%></p>

        <p> valid until : <strong><%= promo.validity %></strong></p>

        <p>Avalaible quantity : <strong><%= promo.remaining_quantity %> <%= promo.unit%></strong></p><br/>

        <a href="#" class="btn-medium"> Add to basket</a>

        <p><%= promo.digits_code %></p>

        <p><%= promo.promotion_status %></p>

        <% end %>
