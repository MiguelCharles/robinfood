<div class="col-xs-12 col-sm-6 col-sm-offset-3">
<%= simple_form_for(@promotion) do |promo| %>
<!-- -->

  <div class="form-inputs">
    <%= promo.input :title %>
    <%= promo.input :initial_quantity %>
    <%= promo.input :unit %>
    <%= promo.input :validity %>
    <%= promo.input :product_type%>
    <%= promo.input :digits_code %>
    <%= promo.input :initial_price_per_unit%>
    <%= promo.input :price_after_promotion_per_unit %>
    <%= promo.input :promotion_status %>
  </div>



  <div class="form-actions">
    <%= promo.button :submit %>
  </div>
<% end %>
</div>
